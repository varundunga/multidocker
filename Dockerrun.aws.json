{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "varundunga/client",
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "varundunga/server",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "varundunga/worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "varundunga/nginx",
            "essential": true,
            "memory": 128,
            "portMappings": [
                {
                    "hostPort": 8080,
                    "containerPort": 80 
                }
            ],
            "links": [
                "server","client"
            ]
        }
    ]
}